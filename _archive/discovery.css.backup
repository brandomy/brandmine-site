/* ==========================================================================
   Discovery2 Panel Styles - Clean Implementation
   ==========================================================================
*/

/* Panel styling */
.panel--discovery2 {
  background-color: var(--secondary-50);
  border-top: 4px solid var(--primary-400);
  border-bottom: 4px solid var(--primary-400);
  padding: var(--space-8) 0;
}

/* Tab container */
.discovery2-tabs {
  max-width: 80%;
  margin: 0 auto;
  background-color: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  border: 1px solid var(--secondary-200);
}

/* Tab navigation */
.discovery2-nav {
  display: flex;
  width: 100%;
  border-bottom: 2px solid var(--primary-200);
}

/* Tab buttons */
.discovery2-tab {
  flex: 1;
  padding: var(--space-4);
  font-family: var(--font-heading);
  font-size: var(--text-lg);
  font-weight: var(--font-medium);
  background-color: transparent;
  border: none;
  color: var(--primary-600);
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  text-align: center;
}

.discovery2-tab:hover {
  background-color: var(--secondary-100);
}

.discovery2-tab.active {
  color: var(--accent-600);
  font-weight: var(--font-bold);
  background-color: var(--secondary-100);
}

/* Indicator for active tab */
.discovery2-tab.active::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 100%;
  height: 3px;
  background-color: var(--accent-600);
}

/* Tab content container */
.discovery2-content {
  padding: var(--space-6);
  background-color: white;
}

/* Individual tab panes */
.discovery2-pane {
  display: none;
}

.discovery2-pane.active {
  display: block;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Tab content intro text */
.discovery2-intro {
  text-align: center;
  color: var(--primary-700);
  font-size: var(--text-lg);
  margin-bottom: var(--space-6);
  line-height: var(--leading-relaxed);
}

/* Tag cloud */
.discovery2-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
  justify-content: center;
}

/* Responsive adjustments */
@media (max-width: var(--breakpoint-md)) {
  .discovery2-tabs {
    max-width: 95%;
  }
  
  .discovery2-nav {
    flex-wrap: wrap;
  }
  
  .discovery2-tab {
    padding: var(--space-3);
    font-size: var(--text-base);
  }
  
  .discovery2-content {
    padding: var(--space-4);
  }
  
  .discovery2-intro {
    font-size: var(--text-base);
  }
}

@media (max-width: var(--breakpoint-sm)) {
  .discovery2-tab {
    flex: 1 0 50%;
    font-size: var(--text-sm);
    padding: var(--space-2);
  }
}