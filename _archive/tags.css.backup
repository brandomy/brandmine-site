/* ==========================================================================
   Tag Styling
   ==========================================================================
*/

/* Tag list styling */
.tag-list {
  margin: var(--space-4) 0;
}

.sector-tag,
.attribute-tag,
.signal-tag,
.market-tag {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-2);
  font-size: var(--text-sm);
  padding: var(--space-1) var(--space-2); 
  border-radius: var(--radius-sm);
  text-decoration: none;
}

/* Individual tag styling */
.tag {
  display: inline-block;
  line-height: 1.4;
  text-decoration: none;
  transition: all 0.2s ease;
}

/* Primary color for Sector tags */
.sector-tag {
  background-color: var(--primary-100);
  color: var(--primary-700);
  border: 1px solid var(--primary-200);
}

.sector-tag:hover {
  background-color: var(--primary-200);
  color: var(--primary-800);
}

/* Secondary color for Attribute tags */
.attribute-tag {
  background-color: var(--secondary-100);
  color: var(--secondary-700);
  border: 1px solid var(--secondary-200);
}

.attribute-tag:hover {
  background-color: var(--secondary-200);
  color: var(--secondary-800);
}

/* Accent color for Signal tags */
.signal-tag {
  background-color: var(--accent-100);
  color: var(--accent-700);
  border: 1px solid var(--accent-200);
}

.signal-tag:hover {
  background-color: var(--accent-200);
  color: var(--accent-800);
}

/* Quaternary color for Market tags */
.market-tag {
  background-color: var(--quaternary-100);
  color: var(--quaternary-700);
  border: 1px solid var(--quaternary-200);
}

.market-tag:hover {
  background-color: var(--quaternary-200);
  color: var(--quaternary-800);
}

/* Tag cloud styling */
.tag-cloud {
  margin: var(--space-6) 0;
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
  padding: var(--space-6);
  background-color: var(--neutral-100);
  border-radius: var(--radius-lg);
  justify-content: center;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--neutral-200);
  position: relative;
  max-width: 90%;
  margin-left: auto;
  margin-right: auto;
}

.tag-cloud::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4px;
  /* background-image: linear-gradient(to right, var(--primary-400), var(--accent-400)); */
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
}

.tag-cloud h3 {
  margin-bottom: var(--space-4);
  font-size: var(--text-xl);
}

.sector-cloud,
.attribute-cloud,
.signal-cloud,
.market-cloud {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
  margin-bottom: var(--space-6);
  justify-content: center;
}

/* Enhanced tag styling for clouds */
.sector-cloud .sector-tag,
.attribute-cloud .attribute-tag,
.signal-cloud .signal-tag,
.market-cloud .market-tag {
  display: inline-block;
  border-radius: var(--radius-md);
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
  text-align: center;
  margin: var(--space-1);
  position: relative;
  overflow: hidden;
}

/* Enhance hover effects for each tag type */
.sector-cloud .sector-tag:hover {
  background-color: var(--primary-200);
  color: var(--primary-900);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.attribute-cloud .attribute-tag:hover {
  background-color: var(--secondary-200);
  color: var(--secondary-900);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.signal-cloud .signal-tag:hover {
  background-color: var(--accent-200);
  color: var(--accent-900);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.market-cloud .market-tag:hover {
  background-color: var(--quaternary-200);
  color: var(--quaternary-900);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Tag page styling */
.tag-header {
  margin-bottom: var(--space-8);
}

.tag-type {
  display: inline-block;
  padding: var(--space-1) var(--space-2);
  background-color: var(--neutral-200);
  color: var(--neutral-700);
  border-radius: var(--radius-sm);
  font-size: var(--text-sm);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--space-2);
}

.tag-description {
  font-size: var(--text-lg);
  color: var(--neutral-600);
  margin-bottom: var(--space-4);
  max-width: 40em;
}

.tag-posts h2 {
  margin-top: var(--space-8);
  margin-bottom: var(--space-4);
}

/* Badge integration preparation */
.tag.with-badge {
  padding-left: var(--space-6);
  position: relative;
}

.badge-icon {
  position: absolute;
  left: var(--space-1);
  top: 50%;
  transform: translateY(-50%);
  width: 16px;
  height: 16px;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}