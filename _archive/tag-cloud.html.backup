        <a href="{{ site.baseurl }}/{{ page.lang }}/tags/attributes/{{ tag[0] }}/" class="tag attribute-tag">
          {{ tag[1][page.lang] }}
        </a>
      {% endfor %}
    </div>
    
    <h3>{{ site.data.translations[page.lang].tags.signals }}</h3>
    <div class="signal-cloud">
      {% for tag in site.data.tag_translations.signals %}
        <a href="{{ site.baseurl }}/{{ page.lang }}/tags/signals/{{ tag[0] }}/" class="tag signal-tag">
          {{ tag[1][page.lang] }}
        </a>
      {% endfor %}
    </div>
  </div>