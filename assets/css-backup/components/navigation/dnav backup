  /* No arrow for inline tooltip */
  .discovery-navigation--option-d .discovery-navigation__tooltip:after {
    display: none;
  }
  
  /* --------------------------------------------------------------------------
     Responsive Adjustments (shared between options)
     -------------------------------------------------------------------------- */
  @media (max-width: 768px) {
    .discovery-navigation__tabs {
      gap: var(--space-1);
    }
    
    .discovery-navigation__tab {
      padding: var(--space-2) var(--space-3);
      font-size: var(--text-sm);
    }
    
    /* Force showing labels on small screens for option A */
    .discovery-navigation--option-a .discovery-navigation__label {
      display: inline-block; /* Show text even in option A on mobile */
    }
    
    /* Hide tooltips on mobile for option A */
    .discovery-navigation--option-a .discovery-navigation__tooltip {
      display: none;
    }
    
    /* Use regular tooltips for option D on mobile */
    .discovery-navigation--option-d .discovery-navigation__tooltip {
      display: none;
    }
    
    .discovery-navigation--option-d .discovery-navigation__label {
      display: inline-block;
    }
  }
  
  @media (max-width: 480px) {
    .discovery-navigation__container {
      padding: var(--space-2) 0;
    }
    
    .discovery-navigation__tabs {
      justify-content: flex-start;
      overflow-x: auto;
      padding: 0 var(--space-4);
      flex-wrap: nowrap;
    }
    
    .discovery-navigation__tab {
