  .discovery-navigation--option-d .discovery-navigation__tab.active {
    background-color: white;
    color: var(--primary-700);
    font-weight: var(--font-semibold);
    box-shadow: var(--shadow-md);
  }
  
  /* Dimension-specific active tab colors */
  .discovery-navigation--option-d .discovery-navigation__tab[data-dimension="sectors"].active {
    color: var(--olive-700);
    border-bottom: 3px solid var(--olive-500);
  }
  
  .discovery-navigation--option-d .discovery-navigation__tab[data-dimension="markets"].active {
    color: var(--sky-700);
    border-bottom: 3px solid var(--sky-500);
  }
  
  .discovery-navigation--option-d .discovery-navigation__tab[data-dimension="attributes"].active {
    color: var(--secondary-700);
    border-bottom: 3px solid var(--secondary-500);
  }
  
  .discovery-navigation--option-d .discovery-navigation__tab[data-dimension="signals"].active {
