    font-weight: var(--font-normal);
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  /* Icon styling with specific colors per dimension */
  .discovery-navigation--option-c .discovery-navigation__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }
  
  /* Each dimension gets its icon color */
  .discovery-navigation--option-c .discovery-navigation__tab[data-dimension="sectors"] .discovery-navigation__icon {
    color: var(--olive-600);  /* Olive color for sectors */
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab[data-dimension="markets"] .discovery-navigation__icon {
    color: var(--sky-600);    /* Blue color for markets */
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab[data-dimension="attributes"] .discovery-navigation__icon {
    color: var(--secondary-600); /* Orange color for attributes */
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab[data-dimension="signals"] .discovery-navigation__icon {
    color: var(--accent-600);    /* Purple color for signals */
  }
  
  /* Show label text */
  .discovery-navigation--option-c .discovery-navigation__label {
    display: inline-block;
    font-size: var(--text-base);
  }
  
  /* Hover effect - just a light background */
  .discovery-navigation--option-c .discovery-navigation__tab:hover {
    background-color: var(--neutral-50);
  }
  
  /* Active tab styling */
  .discovery-navigation--option-c .discovery-navigation__tab.active {
    background-color: white;      /* White background */
    box-shadow: var(--shadow-sm); /* Subtle shadow */
    font-weight: var(--font-semibold);
  }
  
  /* Active tab gets colored bottom border matching its dimension */
  .discovery-navigation--option-c .discovery-navigation__tab.active[data-dimension="sectors"] {
    border-bottom: 3px solid var(--olive-500);
    color: var(--olive-700);
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab.active[data-dimension="markets"] {
    border-bottom: 3px solid var(--sky-500);
    color: var(--sky-700);
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab.active[data-dimension="attributes"] {
    border-bottom: 3px solid var(--secondary-500);
    color: var(--secondary-700);
  }
  
  .discovery-navigation--option-c .discovery-navigation__tab.active[data-dimension="signals"] {
    border-bottom: 3px solid var(--accent-500);
    color: var(--accent-700);
  }
  
  /* No tooltips */
  .discovery-navigation--option-c .discovery-navigation__tooltip {
    display: none;
  }
  
  /* --------------------------------------------------------------------------
     OPTION D: Inline Tooltip Style (Option A with inline tooltips)
     -------------------------------------------------------------------------- */
  .discovery-navigation--option-d .discovery-navigation__tab {
    gap: var(--space-2);
